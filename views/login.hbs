<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card text-center">
      <div class="card-body">
        {{> message }}
        <form action="/users/login" method="POST">
          <div class="form-group">
            <label for="email" class="card-title">Email</label>
            <input style="font-family: Courier New;" type="email" id="email" name="email" class="form-control"
              placeholder="Enter Email">
          </div>
          <div class="form-group mt-3">
            <label for="password" class="card-title">Password</label>
            <input style="font-family: Courier New;" type="password" id="password" name="password" class="form-control"
              placeholder="Enter Password">
          </div>
          <button type="submit" class="btn btn-secondary btn-block w-100 mt-4">Login</button>
        </form>
        <a href="/auth/facebook" class="btn btn-secondary btn-block w-100 mt-3"
          style="background-color: #409db0;border-color:#409db0;">Facbook Login</a>
      </div>
      <div class="card-footer text-muted">
        No Account? <a href="/users/register">register</a>
      </div>
    </div>
  </div>
</div>